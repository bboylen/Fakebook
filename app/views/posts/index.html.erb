<div id="heading">
  <h1>Timeline</h1>
</div>

<div id="new-post">
  <%= link_to "What's on your mind?", new_post_path %>
</div>

<div id="feed">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-header">  
        <span class="post-header-name">
          <%= post.author.first_name%> <%= post.author.last_name%>
        </span>
      </div>
      <div class="post-content">
        <%= post.body%>
      </div>
      <div class="post-comments">
        <%= form_with(url: comments_path, method: :post) do |form|%>
          <%= form.text_area :body, style: "width:100%", placeholder: "Write a comment..."%>
          <%= form.hidden_field :post_id, :value => post.id %>
          <%= form.submit "Comment"%>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<br>


